<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 顶部按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单个播放"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部播放"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_stop_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止所有" />

    </LinearLayout>

    <!-- 效果展示区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行效果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="心形粒子"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="闪电球"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="年兽爆炸"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:id="@+id/effect_0_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/effect_1_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/effect_2_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <!-- 第二行效果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="双十一鼓掌"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="敬业福弹卡"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="七夕倒计时"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:id="@+id/effect_3_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/effect_4_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/effect_5_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <!-- 第三行效果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="天猫618"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="年度账单"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/effect_6_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/effect_7_container"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>